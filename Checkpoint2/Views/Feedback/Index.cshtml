@{
}

@model List<Feedback>

<h2 class="text-center my-4">Feedbacks</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Tipo de Feedback</th>
                <th class="text-center">Data do Feedback</th>
                <th class="text-center">Comentário</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                <tr>
                    <td>@feedback.IdFeedback</td>
                    <td>@feedback.TipoFeedback</td>
                    <td class="text-center">@feedback.DataFeedback</td>
                    <td>@feedback.Comentario</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Create">Registrar Feedback</a>